---
import { getCollection } from "astro:content";
import Posts from "../../layouts/Posts.astro";
import Pagination from "../../layouts/Pagination.astro";
import { sortByDate } from "../../utils/posts";
import Layout from "../../layouts/Layout.astro";

export async function getStaticPaths({ paginate }: any) {
  const allPosts = await getCollection("blog");
  const sorted = sortByDate(allPosts);

  return paginate(sorted, {
    pageSize: 6,
  });
}
const { page } = Astro.props as { page: any };
---

<Layout>
  <img class="homer-writing" src="/images/homer-writing.png" alt="Writing" />
  <Posts posts={page?.data} />
  <Pagination
    prevUrl={page.url.prev}
    nextUrl={page.url.next}
    currentPage={page.currentPage}
    totalPages={page.lastPage}
    paged="blog"
  />
</Layout>

<style>
  .homer-writing {
    border: none;
    width: 100%;
    filter: drop-shadow(2px 2px 4px var(--primary));
  }
</style>
