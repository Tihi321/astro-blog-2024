---
const { link, title, src } = Astro.props as any;
---

<li class="project">
  <a class="project-link" href={link}>
    <img class="hero-image" width={720} height={360} src={src} alt="" />
    <h4 class="title">{title}</h4>
  </a>
  <slot />
</li>

<style>
  .project {
    width: 100%;
    margin-bottom: 12px;
    text-decoration: none;
    transition: 0.2s ease;

    .hero-image {
      margin-bottom: 10px;
      border-radius: 12px;
    }

    .project-link {
      display: block;

      &:hover {
        img {
          box-shadow: var(--box-shadow);
        }
      }
    }

    .title {
      margin: 0;
    }
  }

  @media (min-width: 769px) {
    .title {
      font-size: 32px;
    }

    .project {
      width: 49%;
    }
  }
</style>
